<core:FragmentDefinition
	xmlns="sap.ui.table"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"    
    xmlns:r="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:fb="sap.ui.comp.filterbar"
    xmlns:ux="sap.uxap"
	xmlns:f="sap.f">
	
		<l:VerticalLayout>		
			<form:SimpleForm id="SimpleFormPedidos"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Pedidos">
			<form:content>
				<fb:FilterBar showGoOnFB="false" showFilterConfiguration="false" id="filterbarPedido" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" >
					<fb:filterGroupItems>
						
						<fb:FilterGroupItem id="filterGroupItemIdPedido" name="NamePedido" label="Pedido" groupName="Group1" visibleInFilterBar="true">
							<fb:control>
								<m:Input id="inputPedido" name="Pedido"/>												
							</fb:control>
						</fb:FilterGroupItem>

						<fb:FilterGroupItem id="filterGroupItemDesdePedidos" name="FechaDesde" label="Fecha desde" groupName="Group2" visibleInFilterBar="true">
							<fb:control>
								<m:DatePicker
									id="fechaDesdePickerPedidos"											
									change="onChangeFechaDesde"
									valueFormat="yyyyMMdd"
									displayFormat="dd/MM/yyyy"
								/>											
							</fb:control>
						</fb:FilterGroupItem>

						<fb:FilterGroupItem id="filterGroupItemHastaPedidos" name="Fecha" label="Fecha hasta" groupName="Group2" visibleInFilterBar="true">
							<fb:control>
								<m:DatePicker
									id="fechaHastaPickerPedidos"											
									change="handleChange"
									valueFormat="yyyyMMdd"
									displayFormat="dd/MM/yyyy"/>											
							</fb:control>
						</fb:FilterGroupItem>
						
					</fb:filterGroupItems>
				</fb:FilterBar>
					
				<l:VerticalLayout class="sapUiSmallMarginTop" >					
					<m:Label class="sapUiTinyMarginTop" text="Completo" />	
					<m:CheckBox id="checkEstadoPedidosV" />		
					<m:Label class="sapUiTinyMarginTop" text="Cumpliendo" />	
					<m:CheckBox id="checkEstadoPedidosA" />	
					<m:Label class="sapUiTinyMarginTop" text="Sin Tratar  " />	
					<m:CheckBox id="checkEstadoPedidosR"/>	
				</l:VerticalLayout>	
				
				<l:VerticalLayout class="sapUiSmallMarginTop" >					
					<m:Label class="sapUiTinyMarginTop" text="Anticipos" />	
					<m:CheckBox id="checkAnticipoPedidos" />		
					<m:Label class="sapUiTinyMarginTop" text="Bloqueados" />	
					<m:CheckBox id="checkLiberarPedidos" />	
					<m:Label class="sapUiTinyMarginTop" text="Vencidos" />	
					<m:CheckBox id="checkVencidoPedidos" />	
				</l:VerticalLayout>

				<l:VerticalLayout class="sapUiSmallMarginTop" >					
					<m:Button text="Buscar" press="onFilterPedidos"/>
				</l:VerticalLayout>	
			
			</form:content>
		</form:SimpleForm>

		<Table
			id="tablePedidos"						
			rows="{path: '/ZI_PurchaseOrder'}"	
			selectionMode="None">
				<columns>
					<Column id="columnPedido" width="7rem" sortProperty="PurchaseOrder" >
						<m:Label id="labelPedido" text="Pedido"/>
						<template>
								<m:Link id="linkPedido" text="{PurchaseOrder}" press="handleLinkPedido"/>	
						</template>									
					</Column>
					<Column id="columFechaPedido" width="6rem" sortProperty="CreationDate" >
						<m:Label id="labelFechaPedido"   text="Fecha"/>
						<template>
							<m:Text id="textFechaPedido" text="CreationDate" />
						</template>
					</Column>
					<Column id="columnCampoVendedorPedido" sortProperty="CompanyCode">
						<m:Label id="labelCampoVendedorPedido" text="Campo Vendedor"/>
						<template>
							<m:Text id="textCampoVendedorPedido" text="{CompanyCode}" />								
						</template>
					</Column>
					<Column id="columnTipoPedidoPedido" sortProperty="PurchaseOrderType">
						<m:Label id="labelTipoPedidoPedido" text="Tipo de Pedido"/>
						<template>
							<m:Text id="textTipoPedidoPedido" text="{PurchaseOrderType}" />								
						</template>
					</Column>
					<Column id="columnMonedaPedido" width="5rem" sortProperty="DocumentCurrency">
						<m:Label id="labelMonedaPedido" text="Moneda"/>
						<template>
							<m:Text id="textMonedaPedido" text="{DocumentCurrency}" />								
						</template>
					</Column>
					<Column id="columnValorNetoPedido" sortProperty="NetAmount" >
					<m:Label id="label2ValorNetoPedido" text="Valor Neto"/>
					<template>
						<m:Text id="textoValorNetoPedido" text="{NetAmount}" />								
					</template>
					</Column>
					<Column id="columnBloqueadoPedido" width="7rem" sortProperty="PurchasingProcessingStatus">
						<m:Label id="labelBloqueadoPedido" text="Bloqueado"/>
						<template>
							<m:Text id="textBloqueadoPedido" text="{PurchasingProcessingStatus}" />							
						</template>
					</Column>
					<Column id="columnEstadoPedido" width="4rem" sortProperty="PurchasingCompletenessStatus" >
						<m:Label id="labelEstadoPedido" text="Estado" />
						<template>
								<m:Text id="textEstadoPedido" text="{PurchasingCompletenessStatus}" />	
						</template>
					</Column>
				</columns>						
			</Table>
		</l:VerticalLayout>

</core:FragmentDefinition>