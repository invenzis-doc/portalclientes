<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"    
    xmlns:r="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m"	
    xmlns:ux="sap.uxap">
    <ux:ObjectPageLayout id="ObjectPageLayoutOferta" showTitleInHeaderContent="true">
		<ux:headerTitle>
			<ux:ObjectPageHeader id="headerForOfertaDetail"
							  objectTitle="Datos de Cabecera"
							  showTitleSelector="false"
							  showMarkers="false"
							  markFavorite="true"
							  markFlagged="true"
							  markChanges="false"
							  markChangesPress="handleMarkChangesPress"
							  objectSubtitle="{/OfertaSeleccionado/Ebeln}"
							  objectImageShape="Circle"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  showPlaceholder="false">		
			</ux:ObjectPageHeader>
		</ux:headerTitle>
		<ux:headerContent>
			<l:VerticalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelPosnrOfertaDET" text="Oferta: " class="labelHeader"/>
					<Text text="POSNR" id="posnrOfertaDET" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelMatnrOfertaDET" text="x:" class="labelHeader"/>
					<Text text="MATNR" id="matnrOfertaDET" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelArktxOfertaDET" text="x:" class="labelHeader"/>
					<Text text="ARKTX" id="arktxOfertaDET" />
				</l:HorizontalLayout>
				
				<l:HorizontalLayout>					
					<m:Label id="LabelZmengOfertaDET" text="x:" class="labelHeader"/>
					<Text text="ZMENG" id="zmengOfertaDET" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelMeinsOfertaDET" text="x:" class="labelHeader"/>
					<Text text="MEINS" id="meinsOfertaDET" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelNetwrOfertaDET" text="Valor Neto: " class="labelHeader"/>
					<Text text="NETWR" id="netwrOfertaDET" />
				</l:HorizontalLayout>
			</l:VerticalLayout>			
			
		</ux:headerContent>
	</ux:ObjectPageLayout>
</core:FragmentDefinition>