<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"    
    xmlns:r="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m"	
    xmlns:ux="sap.uxap">
    <ux:ObjectPageLayout id="ObjectPageLayoutOferta" showTitleInHeaderContent="true">
		<ux:headerTitle>
			<ux:ObjectPageHeader id="headerOfertaDetail"
							  objectTitle="Datos de Cabecera"
							  showTitleSelector="false"
							  showMarkers="false"
							  markFavorite="true"
							  markFlagged="true"
							  markChanges="false"
							  markChangesPress="handleMarkChangesPress"
							  objectSubtitle="{/OfertaSeleccionada/SalesOrder}"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  showPlaceholder="false">		
			</ux:ObjectPageHeader>
		</ux:headerTitle>
		<ux:headerContent>
			<l:VerticalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelPosicionOferta" text="Posicion de Oferta: " class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/SalesQuotationItem}" id="textPosicionOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelMaterialOferta" text="Material:" class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/Material}" id="textMaterialOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelTextoPosicionOferta" text="Descripcion del Material:" class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/SalesQuotationItemText}" id="textTextoPosicionOferta" />
				</l:HorizontalLayout>
				
				<l:HorizontalLayout>					
					<m:Label id="labelCantidadOferta" text="Cantidad:" class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/OrderQuantity}" id="textCantidadOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelUnidadOferta" text="Unidad:" class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/OrderQuantityUnit}" id="textUnidadOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelImporteNetoOferta" text="Importe Neto: " class="labelHeader"/>
					<Text text="{/OfertaSeleccionada/NetAmount}" id="textImporteNetoOferta" />
				</l:HorizontalLayout>
			</l:VerticalLayout>			
			
		</ux:headerContent>
	</ux:ObjectPageLayout>
</core:FragmentDefinition>