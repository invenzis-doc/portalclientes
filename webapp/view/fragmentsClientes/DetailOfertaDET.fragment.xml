<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"    
    xmlns:r="sap.suite.ui.microchart"
	xmlns:l="sap.ui.layout" 
	xmlns:m="sap.m"	
    xmlns:ux="sap.uxap">
    <ux:ObjectPageLayout id="ObjectPageLayoutOferta" showTitleInHeaderContent="true">
		<ux:headerTitle>
			<ux:ObjectPageHeader id="headerOfertaDetail"
							  objectTitle="Datos de Cabecera"
							  showTitleSelector="false"
							  showMarkers="false"
							  markFavorite="true"
							  markFlagged="true"
							  markChanges="false"
							  markChangesPress="handleMarkChangesPress"
							  objectSubtitle="{/OfertaSeleccionado/Ebeln}"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  showPlaceholder="false">		
			</ux:ObjectPageHeader>
		</ux:headerTitle>
		<ux:headerContent>
			<l:VerticalLayout>

				<l:HorizontalLayout>					
					<m:Label id="LabelPosicionOferta" text="Posicion: " class="labelHeader"/>
					<Text text="Posicion del pedido" id="textPosicionOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelMaterialOferta" text="Material:" class="labelHeader"/>
					<Text text="Material" id="textMaterialOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelTextoPosicionOferta" text="Posicion:" class="labelHeader"/>
					<Text text="Texto breve posicion de pedido de cliente" id="textTextoPosicionOferta" />
				</l:HorizontalLayout>
				
				<l:HorizontalLayout>					
					<m:Label id="labelCantidadOferta" text="Cantidad:" class="labelHeader"/>
					<Text text="Cantidad" id="textCantidadOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelUnidadOferta" text="Unidad:" class="labelHeader"/>
					<Text text="Unidad" id="textUnidadOferta" />
				</l:HorizontalLayout>

				<l:HorizontalLayout>					
					<m:Label id="labelValorNetoOferta" text="Valor Neto: " class="labelHeader"/>
					<Text text="Valor Neto" id="textValorNetoOferta" />
				</l:HorizontalLayout>
			</l:VerticalLayout>			
			
		</ux:headerContent>
	</ux:ObjectPageLayout>
</core:FragmentDefinition>